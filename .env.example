# Database Configuration
# PostgreSQL connection string for the main database
DB_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5432/postgres

# Ethereum Node Configuration
# RPC endpoint URL for connecting to Ethereum node
NODE_CONNECTION_STRING=https://eth-sepolia.public.blastapi.io

# HTTP Server Configuration
# Address and port for the health check HTTP endpoint
ROUTER_ENDPOINT=0.0.0.0:3000

# Indexing Configuration
# Set to true to index transaction data alongside block headers (optional, defaults to false)
INDEX_TRANSACTIONS=false

# Development Configuration
# Set to true to enable development mode (optional, defaults to false)
IS_DEV=false

# Logging Configuration
# Controls log level (optional, uses tracing defaults if not set)
# Valid values: error, warn, info, debug, trace
RUST_LOG=debug

# Test Database Configuration (only needed for running tests)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5433/fossil_test
